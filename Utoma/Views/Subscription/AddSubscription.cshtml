@{
    ViewData["Title"] = "Subscription Form";

}

@model Subscription


<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

    <div class="d-flex justify-content-between align-items-center">
        <h2>Catalog - @ViewData["Title"]</h2>

    </div>

    </div>
</section><!-- End Breadcrumbs -->

<!-- ======= Blog Single Section ======= -->
<section id="blog" class="blog">
    <div class="container" data-aos="fade-up">

    <div class="row">

        <div class="col-lg-8 entries">
            <h1>@ViewBag.Mag.Name</h1>

            <div class="blog-comments">
                <div class="reply-form">
                <h4>Оформите подписку прямо сейчас!</h4>
                <p>Поля, отмеченные знаком: "*", обязательны для заполнения </p>

                <form asp-action="AddSubscription" asp-controller="Subscription" method="post">
                  <div class="row">

                    <div class="col-md-6 form-group">
                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                        <input asp-for="@Model.FullName" class="form-control" placeholder="Ваше имя*" />
                    </div>

                    <input type="hidden" asp-for="PeriodicalId" />

                    <div class="col-md-6 form-group">
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                        <select asp-for="@Model.City" class="form-control">
                            @foreach(string city in ViewBag.cts)
                            {
                                <option selected=@(city == "Utopia") value="@city">@city</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6 form-group">
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                        <input asp-for="@Model.Address" class="form-control" placeholder="Адрес*" />
                    </div>

                    <div class="col-md-6 form-group">
                        <input asp-for="@Model.PostIndex" class="form-control" placeholder="Почтовый индекс" />
                    </div>

                    <div class="col-md-6 form-group">
                        <input asp-for="@Model.ContactPhoneNumber" class="form-control" placeholder="Телефон" />
                    </div>

                  </div>

                  <button type="submit" class="btn btn-primary">Подписаться</button>
                  <a asp-action="List" asp-controller="Catalog" class="btn btn-primary">Отменить</a>
                </form>

                </div>
            </div>

            

        </div><!-- End blog entries list -->

    </div>
</section><!-- End Blog Single Section -->



            