@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "SubscriptionsIndex";
}
@model IEnumerable<Subscription>

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Management - @ViewData["Title"]</h2>
        </div>
    </div>
</section>
<!-- End Breadcrumbs -->

<div class="container mt-4 mb-4">
    <div class="row content">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Газета или журнал</th>
              <th>ФИО</th>
              <th>Город</th>
              <th>Адрес</th>
              <th>Почтовый индекс</th>
              <th>Контактный телефон</th>
              <th></th>
            </tr>
          </thead>

          <tbody>

            @foreach(var s in Model)
            {
                <tr>
                    <th scope="row">@s.Id</th>
                    <td>@s.Periodical.Name</td>
                    <td>@s.FullName</td>
                    <td>@s.City</td>
                    <td>@s.Address</td>
                    <td>@s.PostIndex</td>
                    <td>@s.ContactPhoneNumber</td>
                    <td>
                        <form asp-action="DeleteSubscription" asp-route-subscriptionId="@s.Id" method="post">
                            <a asp-action="EditSubscription" asp-route-id="@s.Id">Edit</a>
                            <span> | </span>
                            <input type="hidden" name="Id" value="@s.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">                                
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>    

            }

          </tbody>
        </table>
@*        <div>
            <a asp-action="AddPublisher" class="btn btn-primary">Добавить издательство</a>
        </div>*@
    </div>
</div>



