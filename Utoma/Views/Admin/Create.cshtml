@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create";
}
@model Periodical

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Management - @ViewData["Title"]

        </div>

    </div>
</section>
<!-- End Breadcrumbs -->

<div class="container mt-4 mb-4">
    <div class="row content">

        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group m-1">
                        <label asp-for="ISSN"></label>
                        <span asp-validation-for="ISSN" class="text-danger"></span>
                        <input asp-for="ISSN" class="form-control" />
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Name" class="form-control" />
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="NumPages"></label>
                        <input asp-for="NumPages" class="form-control" />
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="TimesInMonth"></label>
                        <input asp-for="TimesInMonth" class="form-control" />
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="Price"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                        <input asp-for="Price" class="form-control" />
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="Category"></label>
                        <span asp-validation-for="Category" class="text-danger"></span>
                        <select asp-for="CategoryId" class="form-control">
                            @if(Model.Id == 0)
                            {
                                <option disabled selected>Выберите категорию...</option>
                            }
                            @foreach(Category cat in ViewBag.Categories)
                            {
                                <option selected=@(Model.Category?.CategoryId == cat.CategoryId) value="@cat.CategoryId">@cat.CategoryName</option>
                            }
                        </select>
                    </div>

                </div>

                <div class="col-md-6">

                    <div class="form-group m-1">
                        <label asp-for="PublicationType"></label>
                        <span asp-validation-for="PublicationType" class="text-danger"></span>
                        <select asp-for="PublicationTypeId" class="form-control">
                            @if(Model.Id == 0)
                            {
                                <option disabled selected>Выберите категорию...</option>
                            }
                            @foreach(PublicationType pt in ViewBag.PTypes)
                            {
                                <option selected=@(Model.PublicationType?.PublicationTypeId == pt.PublicationTypeId) value="@pt.PublicationTypeId">@pt.PublicationTypeName</option>
                            }
                        </select>
                    </div>


                    <div class="form-group m-1">
                        <label asp-for="Publisher"></label>
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                        <select asp-for="PublisherId" class="form-control">
                            @if(Model.Id == 0)
                            {
                                <option disabled selected>Выберите категорию...</option>
                            }
                            @foreach(Publisher p in ViewBag.Publishers)
                            {
                                <option selected=@(Model.Publisher?.PublisherId == p.PublisherId) value="@p.PublisherId">@p.PublisherName</option>
                            }
                        </select>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="CoverImage"></label>
                        <input asp-for="CoverImage" class="form-control" />
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="Thumbnail"></label>
                        <input asp-for="Thumbnail" class="form-control" />
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                    
                    </div>
                </div>
        </div>
            <div class="mt-2">
                <button class="btn btn-primary" type="submit">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

    </div>
</div>
