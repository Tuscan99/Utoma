@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "NewsCheckout";
}
@model IEnumerable<News>

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Materials - @ViewData["Title"]</h2>
            <ol>
                <li><a asp-action="CheckoutNews">Получить статьи</a></li>
            </ol>
        </div>
    </div>
</section>
<!-- End Breadcrumbs -->

<div class="container mt-4 mb-4">
    
    <div class="row content">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Publish Date</th>
              <th>Author</th>
              <th>Category</th>
              <th>Tags</th>
              <th>Newspapers</th>
              <th></th>
            </tr>
          </thead>

          <tbody>

            @foreach(var n1 in Model)
            {
                <tr>
                    <th scope="row">@n1.newsId</th>
                    <td>@n1.Title</td>
                    <td>@n1.PublishDate</td>
                    <td>@n1.Author</td>
                    <td>@n1.NewsCategory</td>
                    <td>@n1.Tags</td>
                    <td>@n1.Newspapers</td>
                    <td>
                        <form asp-action="DeleteNews" asp-route-Id="@n1.newsId" method="post">
                            <a asp-action="EditNews" asp-route-id="@n1.newsId">Edit</a>
                            <span> | </span>
                            <input type="hidden" name="Id" value="@n1.newsId" />
                            <button type="submit" class="btn btn-sm btn-danger">                                
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>    

            }

          </tbody>
        </table>
    </div>

</div>



