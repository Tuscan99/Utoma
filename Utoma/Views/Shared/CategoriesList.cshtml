@model ListViewModel

@{
    string substr = "_(archive)";
}
    <ul>
        @foreach(Category cat in @Model.categoriesToPage)
        {
            if (!cat.CategoryName.Contains(substr))
            {
                <li class="@(cat.CategoryName == Model.selectedCategory ? "bg-light" : "bg-transparent")"  >
                    @Html.ActionLink(cat.CategoryName, "List", "Catalog", new {category=@cat.CategoryName}, null)
                </li>
            }
        }
    </ul>



    